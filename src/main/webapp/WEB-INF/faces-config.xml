              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    
    <name>primefaces_siberia</name>
    
    <component>
        <component-type>org.primefaces.component.SiberiaMenu</component-type>
        <component-class>org.primefaces.siberia.component.SiberiaMenu</component-class>
    </component>
    
    <render-kit>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.SiberiaMenuRenderer</renderer-type>
            <renderer-class>org.primefaces.siberia.component.SiberiaMenuRenderer</renderer-class>
        </renderer>
    </render-kit>
    
    <application>
        <el-resolver>
            org.primefaces.application.exceptionhandler.PrimeExceptionHandlerELResolver
        </el-resolver>
    </application>
    
    <factory>
        <exception-handler-factory>
            org.primefaces.application.exceptionhandler.PrimeExceptionHandlerFactory
        </exception-handler-factory>
    </factory>
</faces-config>